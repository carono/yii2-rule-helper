{
  "name": "carono/yii2-rule-helper",
  "description": "Yii2 helper for working with model validation rules and validators. Provides methods to check if validators are applied to model attributes and get validator short names",
  "type": "yii2-extension",
  "keywords": [
    "yii2",
    "extension"
  ],
  "license": "MIT",
  "authors": [
    {
      "homepage": "https://carono.ru",
      "name": "Alexander Kasyanov",
      "email": "info@carono.ru"
    }
  ],
  "require": {
    "php": "^7.4 || 8.*",
    "yiisoft/yii2": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "carono\\yii2\\helpers\\": "src"
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": true
    }
  }
}
